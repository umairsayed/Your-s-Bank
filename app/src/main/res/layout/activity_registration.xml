<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lockhart.yoursbank.RegistrationActivity">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:text="Registration"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="7dp" />

    <EditText
        android:id="@+id/acc_email_in"
        android:layout_width="373dp"
        android:layout_height="43dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:layout_marginTop="28dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acc_name_in" />

    <EditText
        android:id="@+id/acc_pass_in"
        android:layout_width="373dp"
        android:layout_height="43dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:hint="Confirm password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acc_pass"
        app:layout_constraintVertical_bias="0.024" />

    <EditText
        android:id="@+id/acc_addr_in"
        android:layout_width="373dp"
        android:layout_height="83dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:hint="Address"
        android:importantForAutofill="no"
        android:inputType="textMultiLine|textPostalAddress"
        android:lines="3"
        android:maxLines="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acc_pass_in"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/acc_phone_in"
        android:layout_width="373dp"
        android:layout_height="44dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:layout_marginTop="32dp"
        android:hint="Phone no."
        android:inputType="number"
        android:maxLength="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acc_email_in" />

    <EditText
        android:id="@+id/acc_pass"
        android:layout_width="372dp"
        android:layout_height="44dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acc_phone_in"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/acc_name_in"
        android:layout_width="375dp"
        android:layout_height="42dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.149" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/submit"
        android:layout_width="133dp"
        android:layout_height="70dp"
        android:text="Submit"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addPhoto"
        app:layout_constraintVertical_bias="0.422" />

    <Button
        android:id="@+id/addPhoto"
        android:layout_width="107dp"
        android:layout_height="57dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="36dp"
        android:text="Add photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acc_addr_in" />

    <ImageView
        android:id="@+id/userPhoto"
        android:layout_width="100dp"
        android:layout_height="93dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/addPhoto"
        app:layout_constraintTop_toBottomOf="@+id/acc_addr_in"
        app:srcCompat="@drawable/default_user_photo"
        tools:srcCompat="@drawable/default_user_photo" />
</androidx.constraintlayout.widget.ConstraintLayout>